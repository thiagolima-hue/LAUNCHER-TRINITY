            <button id="loginOfflineButton" disabled>
                <div style="font-size: 14px; font-weight: 700; position: relative; top: 35px; right: 20px;" id="loginButtonContent">
                    LOGIN
                    
                    <div class="circle-loader">
                        <div class="checkmark draw"></div>
                    </div>
                </div>
